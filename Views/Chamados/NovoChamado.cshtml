@model SATWeb.ViewModels.AberturaChamadoViewModel

@{
    ViewData["Title"] = "Abertura de Chamado";
}

<div class="container text-center">
    <h1 class="display-4">Abertura de chamado</h1>
    
    <form method="post" asp-controller="Chamados" asp-action="Abrir">
        <div class="mb-3 row">
            <label asp-for="UsuarioSelecionadoId" class="col-sm-2 col-form-label">Departamento</label>
            <div class="col-sm-10">
                <select asp-for="UsuarioSelecionadoId" asp-items="Model.TodosUsuarios.Select(d => 
                            new SelectListItem {
                                Value = d.Id.ToString(),
                                Text = d.Nome
                            })" class="form-select">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="UsuarioSelecionadoId" class="text-danger"></span>
            </div>
        </div>
        
        
        <div class="mb-3 row">
            <label asp-for="Chamado.Descricao">Descrição</label>
            <textarea asp-for="Chamado.Descricao" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Abrir Chamado</button>
    </form>
</div>