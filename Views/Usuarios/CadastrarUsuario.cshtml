@model UsuarioModel
@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<div class="container text-center">
    <h1 class="display-4">Cadastrar Usuario</h1>
    <form method="post" asp-controller="Usuarios" asp-action="Cadastrar">
        @Html.AntiForgeryToken()
        
        <div class="mb-3 row">
            <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nome" class="form-control">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Departamento</label>
            <div class="col-sm-10">
                <select asp-for="DepartamentoId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Departamentos, "Id", "Nome"))">
                    <option value="">Selecione um departamento</option>
                </select>
                <span asp-validation-for="DepartamentoId" class="text-danger"></span>
            </div>
        </div>

        <button class="btn btn-outline-dark" type="submit">Cadastrar</button>
    </form>
</div>