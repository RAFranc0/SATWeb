@model DepartamentoModel

@{
    ViewData["Title"] = "Editar Departamento";
    var departamentos = ViewBag.Departamentos as List<DepartamentoModel>;
}

<div class="container">
    <h1 class="mb-4">Editar Departamento</h1>

    <div class="mb-3">
        <label class="form-label">Selecione o departamento</label>
        <select id="selectDepartamento" class="form-select">
            <option value="">-- Selecione --</option>
            @foreach (var dep in departamentos)
            {
                <option value="@dep.Id">@dep.Nome</option>
            }
        </select>
    </div>
    <button id="btnLocalizar" class="btn btn-primary">Localizar</button>

    <form id="formEditar" method="post" asp-action="Editar" class="mt-4" style="display:none;">
        <input type="hidden" name="id" id="inputId" />
        <div class="mb-3">
            <label class="form-label">ID</label>
            <input class="form-control" id="editId" disabled/>
        </div>
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input class="form-control" id="editNome" asp-for="Nome"/>
        </div>
        <button type="submit" class="btn btn-danger">Alterar</button>
    </form>

    <div id="erro" class="alert alert-danger mt-3" style="display:none;">
        Ocorreu um erro ao buscar o departamento.
    </div>
</div>

<script src="~/js/editarDepartamento.js" asp-append-version="true"></script>