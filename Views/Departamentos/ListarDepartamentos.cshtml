@model List<DepartamentoModel>

@{
    ViewData["Title"] = "Listar Departamentos";
}

<div class="container text-center">
    <h1 class="display-4">Listar Departamentos</h1>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Nenhum departamento cadastrado</div>
    }
    else
    {
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var departamento in Model)
            {
                <tr>
                    <td>@departamento.Id</td>
                    <td>@departamento.Nome</td>
                </tr> 
            }
            </tbody>
        </table>
    }
</div>