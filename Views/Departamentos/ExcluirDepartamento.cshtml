@model DepartamentoModel

@{
    ViewData["Title"] = "Excluir Departamento";
    var departamentos = ViewBag.Departamentos as List<DepartamentoModel>;
}

<div class="container text-center">

    <div class="vidro">

        <h1 class="display-4 mb-0">@ViewData["Title"]</h1>
        
        @* ----------------------------------------- *@
        @* Campo seletor/localizador de departamento *@
        @* ----------------------------------------- *@

        <div class="my-2 w-50 seletor-localizar">
            <label class="form-label">Selecione o departamento</label>
            <select id="selectDepartamento" class="form-select">
                <option value="">-- Selecione --</option>
                @foreach (var dep in departamentos)
                {
                    <option value="@dep.Id">@dep.Nome</option>
                }
            </select>

            <button id="btnLocalizar" class="btn btn-dark my-3">Localizar</button>
        </div>


        @* ------------------------------------ *@
        @*              Formulario              *@
        @* ------------------------------------ *@

        <form class="formulario" id="formExcluir" method="post" asp-action="Excluir" style="display:none;">
            <input type="hidden" name="id" id="inputId"/>
            <div class="mb-3">
                <label class="form-label">ID</label>
                <input class="form-control" id="campoId" disabled/>
            </div>
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input class="form-control" id="campoNome" disabled/>
            </div>
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>

        <div id="erro" class="alert alert-danger mt-3" style="display:none;">
            Ocorreu um erro ao buscar o departamento.
        </div>
    </div>
</div>

<script src="~/js/Departamentos/excluirDepartamento.js" asp-append-version="true"></script>
